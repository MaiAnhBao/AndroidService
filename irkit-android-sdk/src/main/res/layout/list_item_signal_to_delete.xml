<?xml version="1.0" encoding="utf-8"?>
<!-- A signal in SignalsToDeleteDialogFragment -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="2dp"
    android:paddingTop="2dp">

    <ImageView
        android:id="@+id/list_item_signal_to_delete__image"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:contentDescription="@string/list_item_signal_to_delete__icon_imageview_description" />

    <TextView
        android:id="@+id/list_item_signal_to_delete__name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/list_item_signal_to_delete__image"
        android:layout_toRightOf="@+id/list_item_signal_to_delete__image" />
</RelativeLayout>
